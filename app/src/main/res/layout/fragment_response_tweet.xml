<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/reponse_container"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Blog.ResponseTweet">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <!-- Toolbar Section -->
    <FrameLayout
        android:id="@+id/reponse_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|start"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/reponse_turn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray_btn"
                app:backgroundTint="@null"

                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="8dp">

            <!-- Tweet Section -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <!-- Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tweet_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/avatar_bcc" />

                <!-- Tweet Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Username and Info -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tweet_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BCCNEWS"
                            android:textColor="@color/white"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tweet_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="â€¢ 2h"
                            android:textColor="@color/gray" />
                        <!--Spacer-->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!--                        <Button-->
                        <!--                            android:id="@+id/comment_post"-->
                        <!--                            android:layout_width="100dp"-->
                        <!--                            android:layout_height="35dp"-->
                        <!--                            android:background="@drawable/oval_button"-->
                        <!--                            android:text="Follow"-->
                        <!--                            android:textColor="@color/white"-->
                        <!--                            android:textSize="15sp"-->
                        <!--                            android:paddingBottom="5dp"-->
                        <!--                            app:backgroundTint="@null"-->
                        <!--                            tools:ignore="TouchTargetSizeCheck" />-->

                        <!--3dot-->
                        <ImageView
                            android:id="@+id/tweet_3dot"
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:src="@drawable/threedot_icon"
                            app:tint="@color/gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tweet_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bccnews"
                            android:textColor="@color/gray" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- Tweet Text -->
            <TextView
                android:id="@+id/tweet_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_traffic"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:ignore="HardcodedText" />

            <!-- Image user post -->

            <!--Icons and statistic-->
            <ImageView
                android:id="@+id/tweet_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:background="@drawable/border_image"
                android:clipToOutline="true"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!--chat-->
                <ImageView
                    android:id="@+id/comment_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment"
                    app:tint="@color/gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,383"
                    android:textColor="@color/gray"
                    />
                <!--retweet-->
                <Space
                    android:layout_width="30dp"
                    android:layout_height="0dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/retweet_icon"
                    app:tint="@color/gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,395"
                    android:textColor="@color/gray"/>
                <Space
                    android:layout_width="30dp"
                    android:layout_height="0dp"/>
                <!--heart-->
                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:id="@+id/btn_anim"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginTop="-15dp"
                        android:layout_marginRight="-15dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/animation" />
                </FrameLayout>
                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28.6K"
                    android:textColor="@color/gray"/>
                <Space
                    android:layout_width="30dp"
                    android:layout_height="0dp"/>

                <!--bar-->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bar_chart_icon"
                    app:tint="@color/gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28.6K"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/gray"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <!--bookmark-->
                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bookmark"
                    app:tint="@color/bookmark_tint"/>
            </LinearLayout>

            <!--Relevant text-->
            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most relavant replies"
                android:textColor="@color/gray_btn"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingStart="0dp"
                android:background="@color/gray_bar"
                android:layout_gravity="bottom"/>

<!--            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
<!--                android:id="@+id/swipeRefreshLayout"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                tools:ignore="MissingClass">-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/response_tweet_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_tweet"
                    android:background="@null"/>
<!--            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->


        </LinearLayout>
    </ScrollView>

    <!-- Footer Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <!-- Buttons and their Layouts -->
        <!--Mic Button -->
        <ImageView
            android:id="@+id/mic_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/mic"
            app:tint="@color/light_blue"
            app:backgroundTint="@null"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <!--Sound Button -->
        <ImageView
            android:id="@+id/sound_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/sound"
            app:tint="@color/light_blue"
            app:backgroundTint="@null"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <!-- Add Picture Button -->
        <ImageView
            android:id="@+id/add_picture_button_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/image"
            app:tint="@color/light_blue"
            app:backgroundTint="@null"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <!-- Gif Button -->
        <ImageView
            android:id="@+id/gif_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/gif"
            app:tint="@color/light_blue"
            app:backgroundTint="@null"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <!-- Selection Button -->
        <ImageView
            android:id="@+id/selection_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/selection"
            app:tint="@color/light_blue"
            app:backgroundTint="@null"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <!-- Position Button -->
        <ImageView
            android:id="@+id/position_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/position"
            app:tint="@color/light_blue"
            app:backgroundTint="@null"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <!--Spacer-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gray_bar"
            android:layout_gravity="bottom"/>

        <!-- Circle Button -->
        <ImageView
            android:id="@+id/circle_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/circle_thin_line"
            app:tint="@color/gray_bar"
            app:backgroundTint="@null"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/gray_bar"
            android:layout_gravity="bottom"/>


        <!-- Add Button -->
        <ImageView
            android:id="@+id/add_button"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/add"
            app:tint="@color/light_blue"
            app:backgroundTint="@null"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Response Text -->
        <EditText
            android:id="@+id/edit_text_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your comment here..."
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="16sp"
            android:backgroundTint="@android:color/transparent"
            android:inputType="textMultiLine"
            tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />
    </LinearLayout>
</LinearLayout>
</FrameLayout>
