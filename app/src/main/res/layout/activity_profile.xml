<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header blue -->
    <View
        android:id="@+id/headerView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@color/light_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back_arrow"
        android:background="@drawable/circle_background"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="@id/headerView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"/>

    <!-- search -->
    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_search"
        android:background="@drawable/circle_background"
        android:contentDescription="Search"
        app:layout_constraintTop_toTopOf="@id/headerView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="8dp"/>

    <!-- Upload -->
    <ImageView
        android:id="@+id/uploadIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_upload"
        android:background="@drawable/circle_background"
        android:contentDescription="Upload"
        app:layout_constraintTop_toTopOf="@id/headerView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <!-- Avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/avatar"
        android:contentDescription="Avatar"
        app:layout_constraintTop_toBottomOf="@id/headerView"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- profile -->
    <Button
        android:id="@+id/profileSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        android:textColor="@color/black"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Username -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tran Dan"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        app:layout_constraintStart_toStartOf="@id/avatar"
        android:layout_marginTop="8dp"/>

    <!-- Xác nhận -->
    <ImageView
        android:id="@+id/verifiedIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_verified"
        android:contentDescription="Verified"
        app:layout_constraintTop_toTopOf="@id/userName"
        app:layout_constraintStart_toEndOf="@id/userName"/>

    <!-- @ (username) -->
    <TextView
        android:id="@+id/userHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/@TranDan197921"
        android:textColor="#808080"
        app:layout_constraintStart_toStartOf="@id/userName"
        app:layout_constraintTop_toBottomOf="@id/userName"/>

    <!-- Đã tham gia tháng 9 năm 2024 -->
    <TextView
        android:id="@+id/joinDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joined September 2024"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/userHandle"
        app:layout_constraintStart_toStartOf="@id/userHandle"
        android:layout_marginTop="8dp"/>

    <!-- Thông tin theo dõi -->
    <TextView
        android:id="@+id/followInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Following  1 Follower"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/joinDate"
        app:layout_constraintStart_toStartOf="@id/joinDate"
        android:layout_marginTop="8dp"/>

    <!-- TabLayout for pages -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/followInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabTextColor="@color/black"
        app:tabIndicatorColor="#0080FF" />

    <!-- ViewPager2 through page -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
