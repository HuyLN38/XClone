<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Blog.PostNewsFeed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <!-- Toolbar Section -->
        <FrameLayout
            android:id="@+id/post_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center|start"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/post_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="16sp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <Button
                    android:id="@+id/post_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oval_button"
                    android:text="Post"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@null"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

        </FrameLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Post Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar_post"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/avatar" />

                <!-- Post Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/content_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="What is happening?"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray"
                        android:textSize="16sp"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:imeOptions="actionDone"
                        tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />

                    <!-- Selected Image Preview -->
                    <ImageView
                        android:id="@+id/selected_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:background="@drawable/border_image"
                        android:clipToOutline="true"
                        android:visibility="gone"
                        android:contentDescription="Selected image preview" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--    List of button -->
    <LinearLayout
        android:id="@+id/list_button_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|start">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_bar"
            android:layout_gravity="bottom"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <!--Mic Button -->
            <ImageView
                android:id="@+id/mic_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/mic"
                app:tint="@color/light_blue"
                app:backgroundTint="@null"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <!--Sound Button -->
            <ImageView
                android:id="@+id/sound_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/sound"
                app:tint="@color/light_blue"
                app:backgroundTint="@null"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <!-- Add Picture Button -->
            <ImageView
                android:id="@+id/add_picture_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/image"
                app:tint="@color/light_blue"
                app:backgroundTint="@null"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <!-- Gif Button -->
            <ImageView
                android:id="@+id/gif_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/gif"
                app:tint="@color/light_blue"
                app:backgroundTint="@null"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <!-- Selection Button -->
            <ImageView
                android:id="@+id/selection_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/selection"
                app:tint="@color/light_blue"
                app:backgroundTint="@null"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <!-- Position Button -->
            <ImageView
                android:id="@+id/position_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/position"
                app:tint="@color/light_blue"
                app:backgroundTint="@null"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <!--Spacer-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/gray_bar"
                android:layout_gravity="bottom"/>

            <!-- Circle Button -->
            <ImageView
                android:id="@+id/circle_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/circle_thin_line"
                app:tint="@color/gray_bar"
                app:backgroundTint="@null"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_bar"
                android:layout_gravity="bottom"/>


            <!-- Add Button -->
            <ImageView
                android:id="@+id/add_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/add"
                app:tint="@color/light_blue"
                app:backgroundTint="@null"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />


        </LinearLayout>
    </LinearLayout>


</FrameLayout>