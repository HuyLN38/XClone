<resources>
    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextStyle</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7dp</item>
    </style>

    <style name="ActionBarWidgetTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>

    <style name="SettingsCheckBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/light_blue</item>
    </style>
    <style name="CustomPreferenceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>
    <style name="Theme.MyAppCompatTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

</resources>