<?xml version="1.0" encoding="utf-8"?>

<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Blog.CommentFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

    <!-- Toolbar Section -->
    <FrameLayout
        android:id="@+id/comment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|start"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/comment_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="16sp"
                android:backgroundTint="@color/black"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/comment_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_button"
                android:text="Post"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@null"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

    </FrameLayout>

    <!-- Main Content -->
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/comment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tweet Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tweet_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/avatar_bcc" />

            <!-- Tweet Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Username and Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tweet_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BCCNEWS"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tweet_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bccnews"
                        android:textColor="@color/gray"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/tweet_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ 2h"
                        android:textColor="@color/gray"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Tweet Text -->
                <TextView
                    android:id="@+id/tweet_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/description_yagiQN"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="65dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/response_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replying to"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/response_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bccnews"
                android:textColor="@color/light_blue"
                android:layout_marginStart="4dp" />

        </LinearLayout>



        <!-- Response Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Response Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/response_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/avatar" />

            <!-- Response Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Username and Info -->


                <!-- Response Text -->

                <EditText
                    android:id="@+id/edit_text_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:hint="Type your comment here..."
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:textSize="16sp"
                    android:backgroundTint="@android:color/transparent"
                    android:inputType="textMultiLine"
                    tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tweet_avatar"
        app:layout_constraintBottom_toTopOf="@+id/response_avatar"
        android:layout_marginStart="35dp"
        android:layout_marginTop="130dp">

        <ImageView
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:src="@drawable/vertical_line"
            android:background="@color/gray_btn"
            />

    </FrameLayout>


</FrameLayout>

