<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/black">


    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/avatar" />

    <!-- Tweet Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Username -->
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elon Mút"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <!--@usernameElon-->
            <TextView
                android:id="@+id/tweetlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/elonmut"
                android:textColor="@color/gray"
                android:layout_marginStart="8dp"
                />
            <!--Timestamp and threedot icon-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Timestamp -->
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 2h"
                    android:textColor="@color/gray"
                    android:layout_marginStart="8dp"
                    />
                <!--3dot-->
                <ImageView
                    android:id="@+id/tweet_3dot"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/threedot_icon"
                    app:tint="@color/gray"
                    />

            </RelativeLayout>


        </LinearLayout>

        <!-- Tweet Text -->
        <TextView
            android:id="@+id/tweet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="This is an example tweet with long content to test scrolling in the feed"
            tools:ignore="HardcodedText"/>

        <!--Image user post-->
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/border_image"
            android:clipToOutline="true"
            android:src="@drawable/avatar"/>

        <!--Icons and statistic-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="-10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false">

        <!--chat-->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/comment"
                app:tint="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,383"
                android:textColor="@color/gray"
                />
            <!--retweet-->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/retweet_icon"
                android:layout_marginLeft="10dp"
                app:tint="@color/gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,395"
                android:textColor="@color/gray"/>
            <!--heart-->
            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:elevation="10dp"
                android:clipChildren="false"
                android:clipToPadding="false">
            <ImageView
                android:id="@+id/btn_anim"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginRight="-15dp"
                android:layout_marginTop="-15dp"
                android:src="@drawable/animation"
                android:scaleType="centerInside"
                />
        </FrameLayout>
            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28.6K"
                android:textColor="@color/gray"/>
            <!--bar-->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bar_chart_icon"
                android:layout_marginLeft="10dp"
                app:tint="@color/gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28.6K"
                android:layout_marginLeft="3dp"
                android:textColor="@color/gray"/>
            <!--bookmark-->
            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bookmark"
                app:tint="@color/bookmark_tint"/>
            <!--share-->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/share_social_icon"
                app:tint="@color/gray"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
